{
	"private": false,
	"version": "0.1.0",
	"name": "monitabits-api",
	"description": "Monitabits NestJS API server",
	"type": "module",
	"scripts": {
		"postinstall": "bun run db:generate",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"check:types": "tsc --noEmit",
		"dev": "NODE_ENV=development tsup --watch --onSuccess 'bun dist/index.js'",
		"build": "tsup",
		"start": "bun dist/index.js",
		"db:generate": "bunx --bun prisma generate",
		"db:migrate": "bunx --bun prisma migrate dev",
		"db:migrate:deploy": "bunx --bun prisma migrate deploy",
		"db:studio": "bunx --bun prisma studio",
		"db:reset": "bunx --bun prisma migrate reset"
	},
	"dependencies": {
		"@anatine/esbuild-decorators": "0.2.19",
		"@nestjs/common": "11.1.9",
		"@nestjs/core": "11.1.9",
		"@nestjs/platform-express": "11.1.9",
		"@nestjs/swagger": "latest",
		"@prisma/adapter-pg": "7.1.0",
		"@prisma/client": "7.1.0",
		"@repo/monitabits-kubb": "workspace:*",
		"@repo/utils": "workspace:*",
		"dotenv": "17.2.3",
		"pg": "8.16.3",
		"reflect-metadata": "0.2.2",
		"rxjs": "7.8.2",
		"uuid": "13.0.0",
		"zod": "4.1.13"
	},
	"devDependencies": {
		"@nestjs/cli": "11.0.14",
		"@nestjs/testing": "11.1.9",
		"@repo/test-preset": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/express": "5.0.6",
		"@types/node": "24.10.1",
		"@types/supertest": "6.0.3",
		"@types/uuid": "11.0.0",
		"prisma": "7.1.0",
		"supertest": "7.1.4",
		"tsup": "8.5.0"
	}
}
