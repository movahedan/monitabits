{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@repo/ui": ["../../packages/ui/src"],
			"@repo/ui/*": ["../../packages/ui/src/*"]
		}
	},
	"include": [
		"./src",
		"./next.config.ts",
		"./next-env.d.ts",
		"./.next/types/**/*.ts",
		".next/types/**/*.ts",
		"../../packages/logger/src/**/*",
		"../../packages/ui/src/**/*",
		"../../packages/monitabits-kubb/src/**/*"
	],
	"exclude": [
		"../../packages/ui/src/**/*.test.ts",
		"../../packages/ui/src/**/*.test.tsx",
		"../../packages/ui/src/**/*.stories.ts",
		"../../packages/ui/src/**/*.stories.tsx"
	]
}
