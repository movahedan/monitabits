{
	"root": true,
	"private": false,
	"name": "root",
	"description": "Monitor you Habits!",
	"author": "Soheil Movahedan",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/movahedan/monitabits"
	},
	"homepage": "https://github.com/movahedan/monitabits",
	"bugs": "https://github.com/movahedan/monitabits/issues",
	"version": "0.1.0",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"packageManager": "bun@1.3.3",
	"intershell": {
		"config": "intershell.config.ts"
	},
	"scripts": {
		"//local": "//////////////////////////////////////////////////////////////////////// local //",
		"local:setup": "intershell local:setup",
		"local:vscode": "intershell local:vscode",
		"local:cleanup": "intershell local:cleanup",
		"//general": "//////////////////////////////////////////////////////////////////// general //",
		"check": "biome check .",
		"check:fix": "biome check . --write",
		"check:types": "turbo run check:types",
		"check:affected": "bun run check:fix && turbo run check:types --affected && bun run test --affected && bun run build --affected",
		"test": "bun test",
		"test:coverage": "bun test --coverage-reporter=lcov",
		"dev": "turbo run dev",
		"build": "turbo run build",
		"build:storybook": "turbo run build:storybook",
		"start": "turbo run start",
		"//devcontainer": "////////////////////////////////////////////////////////// devcontainer //",
		"dev:setup": "intershell dev:setup",
		"dev:check": "intershell dev:check",
		"dev:cleanup": "intershell dev:cleanup",
		"dev:rm": "intershell dev:rm",
		"dev:compose": "docker compose -f docker-compose.dev.yml",
		"dev:build": "bun run dev:compose build --parallel",
		"dev:up": "bun run dev:compose --profile all up -d",
		"dev:down": "bun run dev:compose --profile all down --remove-orphans",
		"dev:restart": "bun run dev:compose restart",
		"dev:logs": "bun run dev:compose logs -f",
		"dev:health": "bun run dev:compose ps --format 'table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.Ports}}'",
		"//prodcontainers": "//////////////////////////////////////////////////////////////// prod //",
		"prod:compose": "COMPOSE_PROJECT_NAME=repo-prod docker compose -f docker-compose.yml",
		"prod:build": "bun run prod:compose build",
		"prod:up": "bun run prod:compose up -d",
		"prod:down": "bun run prod:compose down",
		"prod:health": "bun run prod:compose ps --format table",
		"//commit": "////////////////////////////////////////////////////////////////////// commit //",
		"commit": "intershell commit",
		"commit:check": "intershell commit-check",
		"//version": "//////////////////////////////////////////////////////////////////// version //",
		"version:prepare": "intershell version:prepare",
		"version:apply": "intershell version:apply",
		"version:ci": "intershell version:ci",
		"//ci": "////////////////////////////////////////////////////////////////////////////// ci //",
		"ci:act": "intershell ci:act",
		"ci:attach:affected": "intershell ci:attach-affected",
		"ci:attach:service-ports": "intershell ci:attach-service-ports"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.7",
		"bun-types": "1.3.1",
		"intershell": "0.3.8",
		"lefthook": "1.12.4",
		"turbo": "2.5.8",
		"typescript": "5.9.3"
	},
	"overrides": {
		"@types/react": "19.2.2",
		"@types/react-dom": "19.2.2",
		"typescript": "5.9.3",
		"bun-types": "1.3.1",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"vite": "7.2.6",
		"@prisma/client": "7.1.0",
		"prisma": "7.1.0",
		"zod": "4.1.13"
	},
	"keywords": [
		"monitabits",
		"habits",
		"tracker",
		"productivity",
		"self-improvement",
		"monitor-smoking",
		"monitor-social-media",
		"turbo",
		"bun",
		"monorepo",
		"typescript",
		"react",
		"docker",
		"devcontainers",
		"git",
		"vite"
	]
}
